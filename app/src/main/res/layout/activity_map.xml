<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E7EB"
    android:backgroundTint="#E5E7EB"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Mapa de Google Maps -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Controles -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cbccce"
        android:backgroundTint="#cbccce"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Botón de Zoom In -->
        <Button
            android:id="@+id/btnZoomIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#1976D2"
            android:text="Zoom In" />

        <!-- Botón de Zoom Out -->
        <Button
            android:id="@+id/btnZoomOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#1976D2"
            android:text="Zoom Out" />

        <!-- Botón de Cambiar Estilo -->
        <Button
            android:id="@+id/btnChangeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#1976D2"
            android:text="Cambiar Estilo" />

        <!-- Botón de Brújula -->
        <Button
            android:id="@+id/btnCompass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#1976D2"
            android:text="Brújula" />
    </LinearLayout>

</LinearLayout>
